<script type="text/javascript">

    var news_index = 0;
    var news_running = true;

    var news = [];
    <% @news.each do |item| %>
    news.push(['<%= item[0] %>', '<%= item[1] %>', '<%= item[2] %>']);
    <% end %>

    (function ($) {
        load_news = function (index) {
            var item = news[index];
            $('.news-title').text(item[0]);
            $('.news-summary').text(item[1]);
            $('.news-link').attr('href', item[2]);
        }

        rotate_news = function () {
            if (news_running) {
                news_index++;
                if (news_index > 4) {
                    news_index = 0;
                }
                load_news(news_index);
                setTimeout(rotate_news, 5000);
            }
        }
        setTimeout(rotate_news, 5000);

        $('#back_news').click(function () {
            news_running = false;
            news_index--;
            if (news_index < 0) {
                news_index = 4;
            }
            load_news(news_index);
            return false;
        });
        $('#forward_news').click(function () {
            news_running = false;
            news_index++;
            if (news_index > 4) {
                news_index = 0;
            }
            load_news(news_index);
            return false;
        });
    }(jQuery));
</script>
