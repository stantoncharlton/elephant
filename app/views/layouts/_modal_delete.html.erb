<div id="alert" class="modal hide fade"
     tabindex="-1" role="dialog" aria-labelledby="modal_label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h2 id="modal_label" class="page-title"><%= title %></h2>
  </div>
  <div class="modal-body">
    <p><%= message %></p>
  </div>
  <div class="modal-footer">
    <%= link_to "remove", job_membership, method: :delete, remote: true,
                data: {confirm: "Remove " + job_membership.user.name + " from job?", dismiss: "modal"},
                class: "redbtn btnsmall pull-right" %>

    <button class="bluebtn btnsmall pull-right" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>