<div id="drilling_log_entry_<%= entry.id %>"
     class='field drilling-log-entry'>
  <div class="">

    <div class="btn-group inline-block align-top pull-right push-up">
      <a class="custom-data-toggle-jobs" data-toggle="dropdown" href="#">
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Edit Entry", edit_drilling_log_entry_path(entry), remote: true, class: "dropdown-menu-link show-modal-button" %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to "Remove Entry", entry, method: :delete, remote: true,
                      data: {confirm: "Remove Entry?"}, class: "dropdown-menu-link tooltip-info",
                      "data-placement" => "bottom",
                      "data-title" => "Remove Entry" %>
        </li>
      </ul>
    </div>

    <div class="inline-block pull-right" style="width:10px;height:30px;background:<%= DrillingLogEntry.activity_code_color(entry.activity_code) %>;"></div>

    <p class="list-item-column list-item-column-short">
      <b class='blue-text'><%= entry.entry_at.in_time_zone(Time.zone).strftime("%H:%M %p") %></b>
    </p>

    <p class="list-item-column list-item-column-short blue-text">
      <% minutes = (entry.entry_at - last_entry.entry_at) / 60 %>
      <b><%= (minutes / 60).round(2) %></b> hrs
    </p>

    <p class="list-item-column2">
      <b><%= number_with_delimiter(entry.depth, :delimiter => ',') %></b>
      <span class="help-text push-right-small <%= entry.depth - last_entry.depth < 0 ? "warning-text" : "" %>"><%= entry.depth - last_entry.depth %></span>
    </p>

    <p class="list-item-column list-item-column4">
      <span class="<%= entry.activity_code != DrillingLogEntry::DRILLING && entry.activity_code != DrillingLogEntry::SLIDING && entry.activity_code != DrillingLogEntry::CONNECTION_SURVEY && entry.activity_code != DrillingLogEntry::CONNECTION ? "warning-text" : "" %>"><b><%= DrillingLogEntry.activity_code_string(entry.activity_code) %></b></span>
    </p>

    <p class="list-item-column">
      <%= entry.comment %>
    </p>

    <div class="inline-block align-top push-up">
      <% if entry.bha.present? %>
          <% name = entry.bha.name %>
          <div class="member-icon" style="background: <%= Digest::MD5.hexdigest(name)[0..5] %>;">
            <p>
              <%= name[0, 1] %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
</div>