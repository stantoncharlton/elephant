<% provide(:title, 'Jobs') %>

<div class="page_header">
  <h1>Jobs</h1>

  <h2><%= @jobs.count() %></h2>

  <% if signed_in? %>
      <%= link_to "+ Add New Job", new_job_path, class: "bluebtn page_header_button" %>
  <% end %>

</div>

<% if @jobs.empty? %>

    <div class="no-alerts">
      <p class="center">You don't have any jobs right now...</p>
    </div>

<% else %>

    <%= will_paginate %>

    <div id="jobs" class="list">
      <%= render @jobs %>
    </div>

    <%= will_paginate %>

<% end %>