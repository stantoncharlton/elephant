<% provide(:title, I18n.t("jobs.index.title")) %>

<div class="page_header">
  <h1><%= t ".title" %></h1>

  <h2>
    <% if @jobs.count > 0 %>
        <% if params[:page].present? %>
            <%= ((Integer(params[:page]) - 1) * 10) + 1 %> - <%= [((Integer(params[:page]) - 1) * 10) + 10, @jobs.count].min %> of <%= @jobs.count.to_s %>
        <% else %>
            1 - <%= [10, @jobs.count].min %> of <%= @jobs.count.to_s %>
        <% end %>
    <% end %>
  </h2>

  <% if signed_in? %>
      <%= link_to "+ " + I18n.t("jobs.index.new"), new_job_path, class: "bluebtn page_header_button" %>
  <% end %>

</div>

<% if @jobs.empty? %>

    <div class="no-alerts">
      <p class="center"><%= t ".no_jobs" %></p>
    </div>

<% else %>

    <%= will_paginate %>

    <div id="jobs" class="list">
      <%= render @jobs %>
    </div>

    <%= will_paginate %>

<% end %>