<div class="page_header">
  <h1>New Job</h1>
</div>


<%= form_for(@job) do |f| %>
    <%= render 'fields', f: f %>
    <%= f.submit "Create Job", class: "bluebtn pull-right tooltip-info",
                 "data-title" => "Create new job. You edit/add more job information on next page." %>
<% end %>



<div id="modal_popup" class="modal-popup-background">
  <div class="modal-popup">
    <%= link_to "close", "#", class: "delete-button modal-popup-close", id: "close_modal" %>

    <div class="modal-content">

    </div>

  </div>
</div>