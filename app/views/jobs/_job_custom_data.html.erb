<% if params["new"].present? and params["new"] == "true" %>
    <div class="job-tray well well-large" data-tray="custom_data">
<% else %>
    <div class="job-tray custom-data-closed well well-large" data-tray="custom_data">
<% end %>

<div>
  <b><%= job.job_template.name %></b>
  <% if !job.job_template.description.empty? %>
      <p><%= job.job_template.description %></p>
  <% end %>
  <hr>
</div>

<b>Required Data</b>
<br><br>
<% job.dynamic_fields_required.each do |df| %>
    <%= render 'jobs/job_custom_data_field', df: df, job_editable: job_editable %>
<% end %>

<% if job.dynamic_fields_optional.count > 0 %>
    <br>
    <hr>
    <b>Optional Data</b>
    <br><br>
    <% job.dynamic_fields_optional.each do |df| %>
        <%= render 'jobs/job_custom_data_field', df: df, job_editable: job_editable %>
    <% end %>
<% end %>

</div>