<div class="tooltip-info"
     data-placement="right"
     data-html="true"
     data-title="<%="<div class='well-tooltip'>" +
                             (job.close_date.present? ? "" : "<p class='alert alert-info'><b class='blue-text'>" + job.status_string + "</b></p><br>") +
                             "<img src='" + image_path('district_extrasmall.png') + "' class='job-status-avatar'><b>" + (job.district.present? ? job.district.name : "") + "</b><br>" +
                             "<br><b class='blue-text'>" + job.client.name + "</b>" +
                             "<br><b>" + (job.start_date.present? ? job.start_date.strftime("%m/%d/%Y") : job.created_at.strftime("%m/%d/%Y")) + "</b><br><br>" +
                             "<h3>" + job.job_template.product_line.name + " / " + job.job_template.name + "</h3>" +
                             (show_summary_data ? "<hr><div>" + job.job_template.primary_tools.where(:template => true).map { |pt| "<span class='label'>" + pt.tool.name + "</span>" }.join(" ") + "</div>" : "") +
                             (show_summary_data ? "<hr><h3>" + job.dynamic_fields.select { |df| !df.template? && df.priority? }.map { |df| df.name + ": " + (df.value.present? ? df.value : "-") }.join("<br>") + "</h3>" : "") +
                             "</div>" %>">

  <div class="job-status-name">
    <% if job_name %>
        <h2 class="job-title job-title4 inline"><%= job.job_template.name %></h2>
    <% else %>
        <h2 class="job-title job-title4 inline"><%= job.field.name %></h2>

        <p class="job-title-divider2">|</p>

        <h2 class="job-title job-title4 inline"><%= job.well.name %></h2>
    <% end %>
  </div>

  <div class="<%= job_name ? "inline" : "job-progress-data-item" %>">
    <%= image_tag "user_avatar_extrasmall.png", class: "job-status-avatar" %>
    <b><%= job.job_memberships_count %></b>
  </div>

  <% if !job_name %>
      <div class="job-progress-data-item">
        <% if job.failures_count > 0 %>
            <div class="job-failure-item"><%= job.failures_count %></div>
        <% end %>
      </div>
  <% end %>


  <div class="pull-right">

    <% if job.approved_to_close && !show_summary_data %>
        <span class="label label-success">Complete</span>
    <% elsif job.approved_to_ship %>
        <div class="progress progress-success job-progress-bar">
          <div class="bar" style="width: <%= job.status_percentage %>%"><% if job.approved_to_close %><span class="pull-left push-right-small push-down-small">Complete</span><% end %></div>
        </div>
    <% else %>
        <div class="progress progress-info job-progress-bar">
          <div class="bar" style="width: <%= job.status_percentage %>%"></div>
        </div>
    <% end %>
  </div>


</div>

