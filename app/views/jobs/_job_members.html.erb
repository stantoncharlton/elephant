<div class="" style="margin-top: 10px;">
  <p class="job-field-title job-members-title">
    <b>People</b>
  </p>

  <div class="job-members-div">
    <div class="member-short-list">

      <div class="inline-block" id="job_members_list_short">
        <% job.job_memberships.includes(user: :district).each do |jm| %>
            <% if jm.shift_type == 0 && jm.job_role_id != 6 %>
                <%= render 'job_memberships/icon', job_membership: jm %>
            <% end %>
        <% end %>
        <% job.job_memberships.reorder('').includes(user: :district).order("shift_type ASC").each do |jm| %>
            <% if jm.shift_type > 0 && jm.job_role_id != 6 %>
                <%= render 'job_memberships/icon', job_membership: jm %>
            <% end %>
        <% end %>
      </div>

      <% if job_editable %>
          <div class="inline-block push-right-small">
            <%= link_to "Add Member", "#",
                        class: "inline-block add-job-member tooltip-info",
                        id: "add_job_member",
                        "data-placement" => "bottom",
                        "data-title" => "Add new project member" %>
          </div>
      <% end %>

      <div class='inline-block push-right'>
        <%= link_to "#", class: "activity-user-link", id: "toggle_member_names" do %>
            <span id="toggle_member_show"><i class="icon-chevron-down"></i> view names</span>
            <span id="toggle_member_hide" class="hidden"><i class="icon-chevron-up"></i> hide names</span>
        <% end %>
      </div>
    </div>

    <br>

    <%= render 'job_memberships/fields', job: job %>
    <div class="member-loading hidden">
      <span class="ajax-loading search-loading"><b>Adding project member</b></span>
      <br><br>
    </div>

    <div class="member-full-list hidden">
      <ul class="job-members-list" id="job_members_list">
        <% job.job_memberships.includes(user: :district).each do |jm| %>
            <% if jm.shift_type == 0 && jm.job_role_id != 6 %>
                <%= render 'job_memberships/job_membership', job_membership: jm %>
            <% end %>
        <% end %>
        <% on_location = job.job_memberships.reorder('').includes(user: :district).where("job_memberships.shift_type > 0 AND job_memberships.shift_type != 6").order("job_memberships.shift_type ASC") %>
        <% if on_location.any? %>
            <div>
              <br>
              <p class='help-text'><i class="icon-map-marker"></i> On Location</p>
            </div>
            <% on_location.each do |jm| %>
                <% if jm.shift_type > 0 && jm.job_role_id != 6 %>
                    <%= render 'job_memberships/job_membership', job_membership: jm %>
                <% end %>
            <% end %>
        <% end %>
      </ul>
    </div>


  </div>
</div>