<div class="field">
  <% if form_editable %>
      <%= link_to job.field.name, job.field, class: "job-title inline" %>
  <% else %>
      <h2 class="job-title inline"><%= job.field.name %></h2>
  <% end %>


  <p class="job-title-divider">|</p>

  <% if form_editable %>
      <%= link_to job.well.name, edit_well_path(job.well), class: "job-title inline" %>
  <% else %>
      <h2 class="job-title inline"><%= job.well.name %></h2>
  <% end %>

</div>

<div class="">
  <p class="job-field-title">Status</p>

  <p class="job-field-value status-good">Pre-Job</p>
</div>

<div class="">
  <p class="job-field-title">Type</p>

  <div class="job-field-value">
    <h3 class="inline"><%= job.job_template.product_line.name %></h3>
    | <h3 class="inline"><%= job.job_template.name %></h3>
  </div>
</div>

<div class="">
  <% job.dynamic_fields.select { |field| field.dynamic_field_template.priority? }.each do |dynamic_field| %>
      <p class="job-field-title"><%= dynamic_field.dynamic_field_template.name %></p>

      <% if form_editable %>
          <input id="dynamic_field_<%= dynamic_field.id %>" type="text" class="job-field-value-editable custom-data-input"
                 value="<%= dynamic_field.value.present? ? dynamic_field.value : "-" %>">
      <% else %>
          <p class="job-field-value"><%= dynamic_field.value %></p>
      <% end %>
  <% end %>
</div>

<div class="">
  <p class="job-field-title">District</p>

  <% if form_editable %>
      <%= link_to job.district.name, job.district, class: "job-field-value job-field-value-link" %>
  <% else %>
      <p class="job-field-value"><%= job.district.name %></p>
  <% end %>

  <p class="job-field-title">Start Date</p>

  <p class="job-field-value">12/7/12</p>
</div>

<div class="">
  <p class="job-field-title">Client name</p>

  <% if form_editable %>
      <%= link_to job.client.name, job.client, class: "job-field-value job-field-value-link" %>
  <% else %>
      <p class="job-field-value"><%= job.client.name %></p>
  <% end %>

  <p class="job-field-title">End Date</p>

  <p class="job-field-value">12/10/12</p>
</div>

<% if !form_editable %>

    <div class="">
      <p class="job-field-title pull-left">Project Members</p>



    </div>
<% end %>

