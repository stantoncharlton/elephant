<div class="field">
  <% if form_editable %>
      <%= link_to job.field.name, job.field, class: "job-title inline job-type-description-target",
                  "data-placement" => "bottom",
                  "data-html" => true,
                  "data-title" => "<div>" + I18n.t("jobs.job_data.field_name") + ": <b>" + job.field.name + "</b></div>" %>
  <% else %>
      <h2 class="job-title inline"><%= job.field.name %></h2>
  <% end %>


  <p class="job-title-divider">|</p>

  <% if form_editable %>
      <%= link_to job.well.name, edit_well_path(job.well), class: "job-title inline job-type-description-target",
                  "data-placement" => "bottom",
                  "data-html" => true,
                  "data-title" => "<div>" + I18n.t("jobs.job_data.well_name") + ": <b>" + job.well.name + "</b></div>"%>
  <% else %>
      <h2 class="job-title inline"><%= job.well.name %></h2>
  <% end %>

  <% if form_editable %>


      <div class="btn-group inline pull-right">
        <a class="custom-data-toggle-jobs" data-toggle="dropdown" href="#">
          2 Other Jobs on Well
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Cement", "#" %></li>
          <li class="divider"></li>
          <li><%= link_to "Completion", "#" %></li>
        </ul>
      </div>
  <% end %>

</div>

<div class="">
  <p class="job-field-title"><%= t ".status" %></p>

  <% if job.approved_to_close %>
      <p class="job-field-value"><%= t ".status_complete" %></p>
  <% elsif job.approved_to_ship and job.sent_post_job_ready_email %>
      <p class="job-field-value status-good"><%= t ".status_post_job" %></p>
  <% elsif job.approved_to_ship %>
      <p class="job-field-value status-good"><%= t ".status_in_field" %></p>
  <% else %>
      <p class="job-field-value status-good"><%= t ".status_pre_job" %></p>
  <% end %>
</div>

<div class="">
  <p class="job-field-title"><%= t ".division" %></p>

  <% if form_editable %>
      <%= link_to job.job_template.product_line.segment.division.name, job.job_template.product_line.segment.division, class: "job-field-value job-field-value-link" %>
  <% else %>
      <p class="job-field-value"><%= job.job_template.product_line.segment.division.name %></p>
  <% end %>

  <p class="job-field-title"><%= t ".segment" %></p>

  <% if form_editable %>
      <%= link_to job.job_template.product_line.segment.name, job.job_template.product_line.segment, class: "job-field-value job-field-value-link" %>
  <% else %>
      <p class="job-field-value"><%= job.job_template.product_line.segment.name %></p>
  <% end %>
</div>

<div class="">
  <p class="job-field-title"><%= t ".product_line" %></p>

  <% if form_editable %>
      <h3 class="inline">
        <%= link_to job.job_template.product_line.name, job.job_template.product_line, class: "job-field-value job-field-value-link job-type-description-target",
                    "data-placement" => "bottom",
                    "data-html" => true,
                    "data-title" => "<div><b>" + job.job_template.product_line.name + "</b></div>" %>
      </h3>
  <% else %>
      <h3 class="job-field-value"><%= job.job_template.product_line.name %></h3>
  <% end %>

  <p class="job-field-title"><%= t ".job_type" %></p>

  <% if form_editable %>
      <h3 class="inline">
        <%= link_to job.job_template.name, job.job_template, class: "job-field-value job-field-value-link job-type-description-target",
                    "data-placement" => "bottom",
                    "data-html" => true,
                    "data-title" => "<div><b>" + job.job_template.name + "</b><br>" + job.job_template.description + "</div>" %>
      </h3>
  <% else %>
      <h3 class="job-field-value"><%= job.job_template.name %></h3>
  <% end %>
</div>


<div class="">
  <% job.dynamic_fields.select { |field| field.dynamic_field_template.priority? }.each do |dynamic_field| %>
      <p class="job-field-title"><%= dynamic_field.dynamic_field_template.name %></p>

      <% if form_editable %>
          <input id="dynamic_field_<%= dynamic_field.id %>" type="text" class="job-field-value-editable custom-data-input"
                 value="<%= dynamic_field.value.present? ? dynamic_field.value : "-" %>">
      <% else %>
          <p class="job-field-value"><%= dynamic_field.value %></p>
      <% end %>
  <% end %>
</div>

<div class="">
  <p class="job-field-title"><%= t ".district" %></p>

  <% if form_editable %>
      <%= link_to job.district.name, job.district, class: "job-field-value job-field-value-link" %>
  <% else %>
      <p class="job-field-value"><%= job.district.name %></p>
  <% end %>

  <p class="job-field-title"><%= t ".start_date" %></p>

  <p class="job-field-value">12/7/12</p>
</div>

<div class="">
  <p class="job-field-title"><%= t ".client_name" %></p>

  <% if form_editable %>
      <%= link_to job.client.name, job.client, class: "job-field-value job-field-value-link" %>
  <% else %>
      <p class="job-field-value"><%= job.client.name %></p>
  <% end %>

  <p class="job-field-title"><%= t ".end_date" %></p>

  <p class="job-field-value">12/10/12</p>
</div>

<% if !form_editable %>

<% end %>

