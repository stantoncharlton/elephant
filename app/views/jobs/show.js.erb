tray = $(".remote-tray[data-tray='<%= params[:section] %>']");

<% if params[:section] == "assets" %>
    tray.replaceWith("<%= j render 'jobs/tray_assets', job: @job %>");
<% elsif params[:section] == "bha" %>
    $('#bha').replaceWith("<%= j render 'bhas/bhas_list' %>");
    $('.popover').popover({  delay: { show: 500, hide: 200 } });
<% elsif params[:section] == "assets_list" %>
    $('#assets_list').replaceWith("<%= j render 'jobs/assets_list', job: @job %>");
<% elsif params[:section] == "asset_request_list" %>
    <% @asset_list = @job.asset_list %>
    $('#asset_request_list').replaceWith("<%= j render 'asset_lists/list', job: @job %>");
<% elsif params[:section] == "info" %>
    tray.replaceWith("<%= j render 'jobs/tray_documents', job: @job %>");
<% elsif params[:section] == "failures" %>
    tray.replaceWith("<%= j render 'jobs/tray_failures', job: @job %>");
<% elsif params[:section] == "runs" %>
    <% @drilling_log = @job.drilling_log %>
    tray.replaceWith("<%= j render 'drilling_logs/tray_runs', job: @job, drilling_log: @drilling_log %>");
<% elsif params[:section] == "drilling_activity" %>
    <% @drilling_log = @job.drilling_log %>
    <% @bhas = Bha.joins(job: :well).where("bhas.master_bha_id IS NULL").where("jobs.well_id = ?", @drilling_log.job.well_id).order("bhas.name ASC") %>
    tray.replaceWith("<%= j render 'drilling_logs/tray_drilling_activity', job: @job, drilling_log: @drilling_log %>");
<% elsif params[:section] == "surveys" %>
    <% @drilling_log = @job.drilling_log %>
    tray.replaceWith("<%= j render 'drilling_logs/tray_survey', job: @job, drilling_log: @drilling_log %>");
<% elsif params[:section] == "logs" %>
    <% @drilling_log = @job.drilling_log %>
    tray.replaceWith("<%= j render 'drilling_logs/tray_logs', job: @job, drilling_log: @drilling_log %>");
<% elsif params[:section] == "history" %>
    tray.replaceWith("<%= j render 'jobs/tray_history', job: @job %>");
<% elsif params[:section] == "reports" %>
    tray.replaceWith("<%= j render 'jobs/tray_reports', job: @job %>");
<% elsif params[:section] == "daily" %>
    $('#daily').replaceWith("<%= j render 'jobs/daily', job: @job %>");
<% elsif params[:section] == "timesheet" %>
    $('#timesheet').replaceWith("<%= j render 'jobs/timesheet', job: @job %>");
<% elsif params[:section] == "overview" %>
    tray.replaceWith("<%= j render 'jobs/tray_overview', job: @job %>");
<% elsif params[:section] == "team_list" %>
    $('#team_list').replaceWith("<%= j render 'job_memberships/job_members_list' %>");
<% elsif params[:section] == "full_cost" %>
    $('#full_cost').replaceWith("<%= j render 'jobs/tray_cost' %>");
<% end %>


if (!window.matchMedia || !window.matchMedia("(max-device-width: 1024px)").matches) {
    $('.tooltip-info').tooltip();
}

$('.custom-select-ajax').each(function() {
    span_tag = $(this).next('span');
    if($(this).prop("tagName").toLowerCase() == 'select' && span_tag.length <= 0 && !span_tag.hasClass('customSelect')) {
        $(this).customSelect();
    }
});

