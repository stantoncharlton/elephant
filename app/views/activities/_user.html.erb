<% if user.present? %>
    <%= link_to user.name, user, class: "activity-user-link tooltip-info", "data-placement" => "bottom",
                "data-html" => true,
                "data-title" => "<div class='activity-tooltip'><h2 class='white-text'>" +
                    user.title.to_s + "</h2><p>" + (user.district.present? ? user.district.name : "-") + "</p><p class='white-text' style='margin-top: 5px;'>" + user.phone_number + "</p></div>" %>
<% end %>
