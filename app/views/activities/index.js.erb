
$('#job_activities').children().remove();

$('#activity_list').show();
$('.activity-loading').addClass('hidden');



<% @activities.each do |activity| %>
$("#job_activities").append("<%= j render 'activities/job_activity', activity: activity, inside_job: true %>");
<% end %>


if (!window.matchMedia || !window.matchMedia("(max-device-width: 1024px)").matches) {
    jQuery( function($) {
        $('.tooltip-info').tooltip();
    });
}