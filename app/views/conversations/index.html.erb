<% provide(:title, 'Messages') %>


<div class="page_header">
  <h1>Messages</h1>

  <h2><%= @conversations.count() %></h2>

  <%= link_to "+ New Message", new_conversation_path, class: "bluebtn page_header_button" %>
</div>


<% if @conversations.empty? %>

    <div class="no-alerts">
      <p class="center">You don't have any conversations...</p>
    </div>

<% else %>
    <div class="messages-container">

      <%= render 'conversations/conversation_full', conversation: @conversations.first %>

      <ol id="conversations_list" class="conversations-list">
        <%= render @conversations %>
      </ol>

    </div>

<% end %>
