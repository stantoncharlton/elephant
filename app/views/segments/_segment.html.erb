<div id="segment_<%= segment.id %>" class="div-expand-root">


  <div class="header product-line">

    <a href="#" class="div-expand-toggle div-toggle-button">

      <p class="div-expand-count pull-right"><%= pluralize(segment.product_lines.count, "product line") %></p>

      <div class="dropdown div-toggle-header-content">

        <a href="#" class="btn dropdown-toggle product-line-header" data-toggle="dropdown"
           id="segment_<%= segment.id %>_header">
          <%= segment.name %> <b class="caret"></b>
        </a>

        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Rename", edit_segment_path(segment), remote: true %></li>
          <li><%= link_to "Delete", segment, method: :delete, remote: true, data: {confirm: "Delete Segment?"} %></li>
        </ul>


      </div>

    </a>


  </div>

  <div id="product_lines_<%= segment.id %>" class="div-toggle-content indent-content-container hidden">

    <div class="indent-content">
      <%= render segment.product_lines %>
    </div>

    <%= link_to "Add Product Line", new_product_line_path(segment: segment),
                remote: true,
                class: "add-button",
                id: "new_product_line_link_" + segment.id.to_s %>

  </div>

</div>