<%= form_for @segment, html: { class: "inline" }, remote: true do |f| %>

    <div id="fieldset inline">
      <div class="field inline">
        <%= f.text_field :name, placeholder: "Division Name", value: @segment.name,
                         class: "txtfield", autofocus: true %>
        <%= f.submit "Save", class: "bluebtn btnsmall" %>
        <%= link_to "Cancel", "#", class: "bluebtn btnsmall red", id: "cancel_rename_" + @segment.id.to_s %>
      </div>
    </div>


<% end %>