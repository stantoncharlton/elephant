<h1>Update Customer</h1>

<%= form_for(@client) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>

    <div class="actions">
      <%= f.submit "Update Customer" %>
    </div>
<% end %>
