
var scrollTop = window.pageYOffset

if ($('#modal_popup').find('.new-client-form').length == 0) {
    $('#modal_popup').find('.modal-content').append('<%= j render('clients/new_client') %>');
    $('#modal_popup').css('visibility', 'visible');
    $('#modal_popup').find('.modal-popup').css('margin-top', scrollTop + 200);
    $('#modal_popup').height($(document).height());


    $('#client_name_id').keyup(function() {
        $.ajax({
            url:"/clients?search=" + $(this).val(),
            type:"GET",
            dataType:"script"
        });
    });

}

