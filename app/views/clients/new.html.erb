<h1>New Customer</h1>

<%= form_for(@client) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.text_field :name, placeholder: "Customer Name" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Customer", class: "btn btn-large btn-primary" %>
    </div>
<% end %>
