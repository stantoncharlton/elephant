
$('#modal_popup').find('.modal-content').find('*').remove();
$('#modal_popup').find('.modal-content').append("<%= j render 'rigs/new_rig' %>");
$('#modal_popup').css('visibility', 'visible');
$('#modal_popup').find('.loading').addClass('hidden');

$('#rig_name_id').keyup(function() {
    $.ajax({
        url:"/rigs?search=" + $(this).val(),
        type:"GET",
        dataType:"script"
    });
});
