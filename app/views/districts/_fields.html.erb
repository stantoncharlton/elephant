<%= render 'shared/error_messages', object: f.object %>

<div class="header">
  <h2>Information</h2>
</div>

<div class="content">
  <div class="field">
    <%= f.text_field :name, placeholder: "District Name", class: "txtfield" %>
  </div>

  <div class="field stripe">
    <%= f.label :country_id, class: "field-title" %>
    <%= f.select :country_id, @countries.collect { |p| [p.name, p.id] },
                 prompt: "Select a Country..." %>
  </div>

  <div class="field stripe">
    <%= f.label :state_id, class: "field-title" %>
    <%= f.select :state_id, @states.collect { |p| [p.name, p.id] },
                 prompt: "Select a State..." %>

    <div class="no-alerts inline">
      <p class="inline push-right">(Optional)</p>
    </div>
  </div>

</div>

<div class="header">
  <h2>Contact Information</h2>
</div>

<div class="content">

  <div class="field">
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all,
                           html: { class: "long-select" },
                           default: "Central Time (US & Canada)" %>
  </div>

  <div class="field stripe">
    <%= f.text_field :region, placeholder: "Region", class: "txtfield" %>
  </div>

  <div class="field stripe">
    <%= f.text_field :address_line_1, placeholder: "Address", class: "txtfield" %>
    <%= f.text_field :address_line_2, placeholder: "Address Line 2", class: "txtfield small" %>
  </div>
  <div class="field stripe">
    <%= f.text_field :city, placeholder: "City", class: "txtfield small" %>
    <%= f.text_field :postal_code, placeholder: "Postal Code", class: "txtfield small" %>
  </div>
  <div class="field stripe">
    <%= f.text_field :phone_number, placeholder: "Phone Number", class: "txtfield small" %>
    <%= f.text_field :support_email, placeholder: "Support Email", class: "txtfield small" %>

  </div>

</div>

