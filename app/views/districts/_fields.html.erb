<%= render 'shared/error_messages', object: f.object %>

<div class="header">
  <h2>Information</h2>
</div>

<div class="content">
  <div class="field">
    <%= f.text_field :name, placeholder: "District Name", class: "txtfield" %>
  </div>

  <div class="field stripe">
    <%= f.label :country_id, class: "field-title" %>
    <%= f.select :country_id, @countries.collect { |p| [p.name, p.id] } %>
  </div>

  <p>Optional:</p>
  <div class="field stripe">
    <%= f.label :state_id, class: "field-title" %>
    <%= f.select :state_id, @states.collect { |p| [p.name, p.id] } %>
  </div>
</div>

