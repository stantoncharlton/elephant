<% provide(:title, 'Districts') %>

<div class="page_header">
  <h1>Districts</h1>

  <h2 class="paginated-count">
    <%= render 'layouts/paged_header', items: @districts %>
  </h2>

  <% if signed_in_admin? %>
      <%= link_to "+ Add New District", new_district_path, class: "bluebtn page_header_button tooltip-info",
                  "data-placement" => "bottom",
                  "data-title" => "Create new district"%>
  <% end %>

  <%= form_tag districts_path, :method => 'get', :id => "districts_search", remote: true, class: "inline search-box" do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search districts", class: "search-query tooltip-info",
                         "data-placement" => "left",
                         "data-title" => "Search districts by name"%>
  <% end %>
</div>


<div id="districts_list">
  <%= will_paginate %>
  <div id="districts" class="list">
    <%= render @districts %>
  </div>
  <%= will_paginate %>
</div>