<%= form_for @district do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.text_field :name, placeholder: "District Name" %>
    </div>

    <div class="actions">
      <%= f.submit "Create district", class: "btn btn-large btn-primary" %>
    </div>

<% end %>