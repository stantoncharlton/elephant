<div class='inline-block'>
  <% if use_link %>
      <b><%= link_to part_membership.from_name, part_membership.from, class: "activity-user-link shipment-name tooltip-info", "data-title" => part_membership.from_name %></b>
  <% else %>
      <b><%= part_membership.from_name %></b>
  <% end %>
  &nbsp;&nbsp;&nbsp;
  <i class="icon-chevron-right align-top"></i>
  &nbsp;&nbsp;&nbsp;
  <% if use_link %>
      <% if part_membership.to.present? && part_membership.to.is_a?(Job) %>
          <% name = part_membership.to_name + " - #{part_membership.to.job_template.name}" %>
          <b><%= link_to name, part_membership.to, class: "activity-user-link shipment-name tooltip-info", "data-title" => name %></b>
      <% else %>
          <b><%= link_to part_membership.to_name, part_membership.to, class: "activity-user-link shipment-name tooltip-info", "data-title" => part_membership.to_name %></b>
      <% end %>
  <% else %>
      <b><%= part_membership.to_name %></b>
  <% end %>
</div>