$('#modal_popup').css('visibility', 'hidden');
$('#modal_popup').find(".modal-content").children().remove();
$('#modal_popup').height(0);

<% if @shipment.present? %>
    if($("#shipment_<%= @shipment.id %>").length > 0) {
        shipment = $("#shipment_<%= @shipment.id %>");
        shipment.next('hr').remove();
        shipment.remove();
    }
<% end %>