<div class="remote-tray" data-tray="maintenance">

  <div class="remote-loading hidden">
    <br><br>
    <%= render 'layouts/inline_loading', title: "Please wait, loading assets in maintenance..." %>
  </div>

  <div class="content tray-content content-loaded">

    <% parts = @parts.where(:status => Part::IN_REDRESS) %>

    <div class='well'>
      <h1 class="donut-text inline"><%= parts.count %></h1>
      <div class='inline-block push-down push-right-small'>
        <h3 class="inline-block">Assets</h3>
      </div>
    </div>

    <div id="parts" class="list">
      <% parts.each_with_index do |part, index| %>
          <%= render 'parts/sub_part2', part: part, index: index, condensed: true, show_name: true %>
      <% end %>
    </div>

  </div>

</div>