<% provide(:title, 'Search for ' + @term) %>

<div class="page_header">
  <h1>Search for '<%= @term %>'</h1>

  <h2><%= @jobs.count() %></h2>

</div>



<div id="jobs" class="list">
  <% @jobs.each do |job| %>
      <%= link_to job, class: "job-link" do %>
          <%= render 'jobs/job_data', job: job, form_editable: false, new_line_job_type: false %>
      <% end %>
  <% end %>
</div>

<%= will_paginate @jobs %>
