<div id="product_line_<%= product_line.id %>">


  <div class="header product-line">
    <div class="dropdown"> <!-- btn-group -->

      <a href="#" class="btn dropdown-toggle product-line-header" data-toggle="dropdown"
         id="product_line_<%= product_line.id %>_header">
        <%= product_line.name %> <b class="caret"></b>
      </a>

      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Rename", edit_product_line_path(product_line), remote: true %></li>
        <li><%= link_to "Delete", product_line, method: :delete, remote: true, data: {confirm: "You sure?"} %></li>
      </ul>

      <p class="job-type-count"><%= pluralize(product_line.job_templates.count, "job type") %></p>

      <%= link_to "+ New Job Type", new_job_template_path(product_line: product_line),
                  class: "bluebtn btnsmall pull-right btnheader  inline" %>
    </div>


  </div>


  <div>
    <%= render product_line.job_templates %>



  </div>

</div>