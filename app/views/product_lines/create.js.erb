<% if @product_line.new_record? %>
$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Problem Adding Product Line", message: @product_line.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show:true});

<% else %>

$('#new_product_line_id_<%= @product_line.segment.id %>').hide();
$('#new_product_line_link_<%= @product_line.segment.id %>').show();
$('#product_lines_<%= @product_line.segment.id %>').find('.indent-content:first').append($("<%= j render @product_line %>"));

$('#job_templates_<%= @product_line.id.to_s %>').removeClass("hidden");

<% end %>