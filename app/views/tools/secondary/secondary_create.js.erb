<% if @tool.new_record? %>
$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Problem Adding Tool", message: @tool.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show:true});

<% else %>

$('.no-secondary-tools').hide();
$('#secondary_tools_list').append("<%= j render 'tools/secondary/secondary_tool', tool: @tool, is_editable: true %>");
$('.secondary-tool-count').text('<%= "(" + @tool.job.secondary_tools.count.to_s + ")" %>');
<% end %>