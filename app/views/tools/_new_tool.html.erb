<div class="page_header">
  <h1>Create New Tool</h1>
</div>

<br>
<% if tool.product_line %>
    <b>Primary Tool on Product Line</b>
<% else %>
    <b>Secondary Tool on Division</b>
<% end %>
<br>
<br>

<%= form_for tool, remote: true do |f| %>

    <%= f.hidden_field :division_id, value: tool.division ? tool.division.id : nil %>
    <%= f.hidden_field :product_line_id, value: tool.product_line ? tool.product_line.id : nil %>

    <%= f.text_field :name,
                     autofocus: true,
                     placeholder: "Name of tool",
                     class: "txtfield" %>

    <div class="content actions">
      <%= f.submit "Create Tool", class: "bluebtn pull-right" %>
    </div>
<% end %>