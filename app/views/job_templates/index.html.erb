<% provide(:title, 'Job Templates') %>

<div class="page_header">
  <h1>Product Lines</h1>

  <h2><%= @product_lines.count %></h2>

  <%= link_to "Add New Product Line", new_product_line_path, remote: true,
              class: "bluebtn page_header_button", id: "new_product_line_link" %>
</div>


<ul class="jobs_templates">


  <div id="product_lines">
    <% @product_lines.each do |product_line| %>
        <div id="product_line_<%= product_line.id %>" class="product-line">


          <div class="dropdown"> <!-- btn-group -->

            <a href="#" class="btn dropdown-toggle product-line-header" data-toggle="dropdown"
               id="product_line_<%= product_line.id %>_header">
              <%= product_line.name %> <b class="caret"></b>
            </a>

            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Rename", edit_product_line_path(product_line), remote: true %></li>
              <li><%= link_to "Delete", product_line, method: :delete, data: {confirm: "You sure?"} %></li>
            </ul>

            <p class="job-type-count"><%= pluralize(product_line.job_templates.count, "job type")  %></p>
          </div>


          <div>
            <%= render product_line.job_templates %>

            <%= link_to "+ New Job Type", new_job_template_path(product_line: product_line),
                        class: "btn btn-info add-job-type" %>
          </div>

        </div>
    <% end %>
  </div>



</ul>