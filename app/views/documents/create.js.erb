<% if @document.new_record? %>

$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Problem Adding Document", message: @document.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show:true});

<% else %>

<% if @document.category == "Pre-Job" %>
    $("#documents").append("<%= j render(@document, editable: true) %>");
<% elsif @document.category == "Post-Job" %>
    $("#documents2").append("<%= j render(@document, editable: true) %>");
<% elsif @document.category == "Field Bulletins" %>
    $("#documents3").append("<%= j render(@document, editable: true) %>");
<% end %>

$('[id=new_document_name]').val('');


<% end %>


