    $('#overview_company').replaceWith('<%= j render 'overview/tray_company' %>');
<% elsif params[:section] == "company_failures" %>
    $('#company_failures').replaceWith('<%= j render 'overview/company_failures' %>');
<% elsif params[:section] == "rigs" %>
    $('#overview_rigs').replaceWith('<%= j render 'overview/tray_rigs' %>');
