<div id="division_<%= division.id %>" class="div-expand-root">

  <div class="header product-line">

    <a href="#" class="div-expand-toggle div-toggle-button tooltip-info"
       data-placement="bottom"
       data-title="Click to expand/collapse segments">



      <span class="product-line-header"><%= division.name %><span class="division-level-name">Division</span></span>
    </a>
  </div>


  <div id="segments_<%= division.id %>"
       class="div-toggle-content indent-content-container <%= params[:division] != division.id.to_s ? "hidden" : "" %>">

    <div class="indent-content">
      <%= render division.segments %>
    </div>

    <%= link_to "Add Segment", new_segment_path(division: division),
                remote: true,
                class: "add-button tooltip-info",
                id: "new_segment_link_" + division.id.to_s,
                "data-placement" => "bottom",
                "data-title" => "Create new segment on " + division.name %>

      <div class="inline dropdown pull-right">
        <br>
        <a href="#" class="activity-user-link dropdown-toggle tooltip-info push-right-small"
           data-placement="bottom"
           data-title="Click to rename/delete division"
           data-toggle="dropdown"
           id="division_<%= division.id %>_header">Rename/Delete Division
        </a>

        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Rename", edit_division_path(division), remote: true %></li>
          <li><%= link_to "Delete", division, method: :delete, remote: true, data: {confirm: "Permanently Delete Division? This can't be undone. This will cause all sub Segments, Product Lines, and Job Types to also be deleted. "} %></li>
        </ul>
      </div>
  </div>

</div>