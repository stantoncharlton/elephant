<%= render 'shared/error_messages', object: f.object %>

<div class="content">

  <div>

    <div class="">
      <b>Well Plan Name</b><br><br>
      <%= f.text_field :name, placeholder: "Well Plan Name", class: "txtfield tooltip-info",
                       "data-placement" => "bottom",
                       "data-title" => "Well name" %>
    </div>

    <br>

    <div class="">
      <b>Tie On Point</b><br><br>

      <div class="">
        <%= check_box_tag "import_tie_on", @import_tie_on,
                          class: "regular-checkbox", id: "import_tie_on" %>
        <label for="import_tie_on"></label>

        <p class="checkbox-label">Import Tie On from Well Points</p>
      </div>

      <div class="hidden well" id="tie_on_fields">
        <div>
          <%= text_field_tag "tie_on_md", "", placeholder: "Measured Depth", class: "txtfield small tooltip-info",
                             "data-placement" => "bottom",
                             "data-title" => "Measured Depth" %>
          <%= text_field_tag "tie_on_i", "", placeholder: "Inclination", class: "txtfield small tooltip-info",
                             "data-placement" => "bottom",
                             "data-title" => "Inclination" %>
          <%= text_field_tag "tie_on_a", "", placeholder: "Azimuth", class: "txtfield small tooltip-info",
                             "data-placement" => "bottom",
                             "data-title" => "Azimuth" %>
        </div>
        <div>
          <%= text_field_tag "tie_on_tvd", "", placeholder: "True Vertical Depth", class: "txtfield small tooltip-info",
                             "data-placement" => "bottom",
                             "data-title" => "True Vertical Depth" %>
          <%= text_field_tag "tie_on_ns", "", placeholder: "North/South", class: "txtfield small tooltip-info",
                             "data-placement" => "bottom",
                             "data-title" => "North/South" %>
          <%= text_field_tag "tie_on_ew", "", placeholder: "East/West", class: "txtfield small tooltip-info",
                             "data-placement" => "bottom",
                             "data-title" => "East/West" %>
        </div>
      </div>

    </div>

    <br>

    <div class="">
      <b>Well Plan Points</b><br><br>
      <%= text_area_tag "points", @survey_points,
                        placeholder: "Well Plan Points",
                        class: "txtfield new-message-body tooltip-info",
                        "data-placement" => "bottom",
                        "data-title" => "Well Plan Points" %>
    </div>
  </div>
</div>

