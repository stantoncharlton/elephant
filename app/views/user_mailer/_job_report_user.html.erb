<td width="200">
  <% if real_index < job_memberships_array.length %>
      <% job_membership = job_memberships_array[real_index] %>
      <table height="32" border="0" cellpadding="0" cellspacing="0">
        <tr height="32">
          <td width="32" class="member-icon <%= job_membership.icon_css_style %> center">
            <% names = job_membership.user.present? ? job_membership.user.name.split : (job_membership.user_name.present? ? job_membership.user_name.split : []) %>
            <table height="32" border="0" cellpadding="0" cellspacing="0" style="margin-left: 5px;">
                <tr>
                  <td style="font-family: arial; color: #FFFFFF; font-size: 15px; text-align: center;">
                    <% if names.any? %>
                        <%= names.count > 1 ? names.first[0, 1] + names.last[0, 1] : names.first[0, 1] %>
                    <% else %>
                        -
                    <% end %>
                  </td>
                </tr>
            </table>
          </td>
          <td width="5"></td>
          <td>
            <b><%= job_membership.user.present? ? job_membership.user.name : job_membership.user_name %></b><br>
            <span><%= job_membership.user.present? ? job_membership.user.phone_number : job_membership.phone_number %></span>
          </td>
        </tr>
      </table>
  <% end %>
</td>