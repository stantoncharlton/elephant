$('.form[data-form=new-asset-form]').show();
$('.form-loading[data-form=new-asset-form]').addClass('hidden');

<% if @part_membership.new_record? %>
$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Problem Adding Part", message: @part_membership.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show: true});
$('#alert').css('z-index', '10000');
<% else %>


if($('#asset_list').hasClass('regenerate')) {
    $('#asset_list').replaceWith('<%= j render 'shipments/grouped_list', shipment: @part_membership.shipment, editable: @part_membership.shipment.status != Shipment::COMPLETE %>');
}
else {
    $('#asset_list').append('<%= j render 'part_memberships/part_membership', part_membership: @part_membership, allow_remove: true %>');
}

$('#part_search').val('').removeClass('ui-autocomplete-bad').focus();
$('#part_membership_part_id').val('');
$('#part_membership_name').val('');
$('#part_membership_serial_number').val('');
$('#rental_name').val('');
$('#rental_serial_number').val('');
$('#accessory_name').val('');
$('#accessory_serial_number').val('');
$('#id').val('');
$('#od').val('');
$('#length').val('');

$('#part_membership_<%= @part_membership.id %>').find('.popover').popover({  delay: { show: 500, hide: 200 } });


$('#no_assets').addClass('hidden');

<% end %>