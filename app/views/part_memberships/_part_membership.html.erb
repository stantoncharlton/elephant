<div id="part_membership_<%= part_membership.id %>" class="inline-block align-top">
  <%= link_to part_membership.part.present? ? part_membership.part : part_membership.job.present? ? job_path(part_membership.job, anchor: 'tools_assets') : jobs_path,
              target: "_blank",
              class: "part-box2 popover " + (part_membership.part_type == PartMembership::ACCESSORY ? "part-box-accessory" : "") + ' ' + (part_membership.shipping? ? 'red' : ''),
              "data-html" => "true",
              "data-title" => (part_membership.part.present? ? part_membership.part.master_part.name : part_membership.name),
              "data-content" => render('part_memberships/part_hover', part_membership: part_membership, allow_remove: allow_remove),
              "data-toggle" => "popover",
              "data-placement" => "bottom",
              "data-trigger" => "hover" do %>
      <div class='bar' style="background: <%= '#' + part_membership.color %>;"></div>
      <% if part_membership.part_type == PartMembership::RENTAL %>
          <div class='rental <%= part_membership.shipping? ? 'white-text' : '' %>'>R</div>
      <% end %>
      <% if part_membership.part_type == PartMembership::ACCESSORY %>
          <div class='accessory'>DI</div>
      <% end %>
      <div class='center name'><%= part_membership.part.present? ? part_membership.part.master_part.name : part_membership.name %></div>
      <div class='center'><%= part_membership.serial_number %></div>
  <% end %>
</div>

