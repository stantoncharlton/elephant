function removeOldContent(section) {
    $('#drilling_overview').find('.job-tray-content').remove();
    $('#drilling_log').find('.job-tray-content').remove();
    $('#drilling_rop').find('.job-tray-content').remove();
    $('#drilling_runs').find('.job-tray-content').remove();
    $('#drilling_daily').find('.job-tray-content').remove();
    $('#drilling_bha').find('.job-tray-content').remove();
    $('#drilling_npt').find('.job-tray-content').remove();
}

<% if params[:section] == "drilling_overview" %>
if(!$('#drilling_overview').hasClass('custom-data-closed')) {
    removeOldContent('<%= params[:section] %>');
}
<% else %>
removeOldContent('<%= params[:section] %>');
<% end %>

