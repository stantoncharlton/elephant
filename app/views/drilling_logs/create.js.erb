$('.form[data-form=new-job-log]').show();
$('.form-loading[data-form=new-job-log]').addClass('hidden');

<% if @drilling_log.new_record? %>

$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Failed to add entry", message: @drilling_log.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show:true});

<% else %>

$('.no-job-log-entries').remove();

$("#list").append("<%= j render 'drilling_logs/drilling_log', entry: @drilling_log, last_entry: @last_entry %>");
$('#new_job_log_id').val('');

if (!window.matchMedia || !window.matchMedia("(max-device-width: 1024px)").matches) {
$('.activity-user-link').tooltip();
$('.tooltip-info').tooltip();
}

<% end %>
