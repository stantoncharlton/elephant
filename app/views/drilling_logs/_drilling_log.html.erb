<div class='field'>
  <div class="">
    <p class="list-item-column list-item-column-short">
      <b class='blue-text'><%= entry.entry_at.strftime("%l:%M %p") %></b>
    </p>

    <p class="list-item-column list-item-column-short">
      <% minutes = (entry.entry_at - last_entry.entry_at) / 60 %>
      <%= (minutes / 60).round(2) %>
    </p>

    <p class="list-item-column2">
      <b><%= entry.depth %></b>
      <span class="help-text push-right-small <%= entry.depth - last_entry.depth < 0 ? "warning-text" : "" %>"><%= entry.depth - last_entry.depth %></span>
    </p>

    <p class="list-item-column list-item-column3">
      <span class=""><b><%= DrillingLog.activity_code_string(entry.activity_code) %></b></span>
    </p>

    <p class="list-item-column">
      <%= entry.comment %>
    </p>

    <div class="inline-block pull-right align-top push-up">
      <%= render "users/icon", user: entry.user %>
    </div>
  </div>
</div>