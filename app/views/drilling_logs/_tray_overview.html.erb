  <div class='inline-block align-top'>
    <b>ROP Over Time</b>
    <br><br>

    <div class="tooltip-info" data-title="ROP">
      <canvas id="canvas" height="160" width="700"></canvas>
    </div>
  </div>


  <div>

    <div class="chart-block tooltip-info"
         data-title="Total Number of Failures.">
      <div class="chart-title">Failures</div>
      <div class="donut-chart-div job-donut-chart-div">
        <div class="donut-text chart-text-red"><%= issues.count %></div>
        <div class="percentage chart-text-red"></div>
      </div>
    </div>

    <div class="chart-block tooltip-info"
         data-title="Failures/Feet">
      <div class="chart-title">Failure Rate</div>
      <div class="donut-chart-div job-donut-chart-div">
        <div class="donut-text chart-text-red"><%= drilling_log.nil? || drilling_log.total_drilled.nil? || drilling_log.total_drilled == 0 ? "-" : (issues.count.to_f / drilling_log.total_drilled.to_f * 1000.0).round(1) %></div>
