<div class="section-header">
  <h1>Update Shipper</h1>

  <div class="btn-group inline pull-right">
    <a class="custom-data-toggle-jobs" data-toggle="dropdown" href="#">
      Advanced Actions
    </a>
    <ul class="dropdown-menu">

      <li>
        <%= link_to "Delete Supplier", @shipper, method: :delete,
                    data: {confirm: "Delete supplier?"},
                    class: "dropdown-menu-link tooltip-info",
                    "data-placement" => "left",
                    "data-title" => "Permanently delete supplier. Warning, this can't be undone." %>
      </li>


    </ul>
  </div>
</div>


<div class="form">
<%= form_for @shipper do |f| %>

    <%= render "fields", f: f %>

    <div class="actions">
      <%= f.submit "Save Shipper", class: "btn btn-success pull-right tooltip-info form-loading-on-click",
                   "data-title" => "Save shipper"%>
    </div>
<% end %>
</div>

<%= render "layouts/inline_loading", title: "Saving shipper, please wait..." %>
