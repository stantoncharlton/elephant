<div class="page_header">
  <h1>Create New Well</h1>
</div>

<div class="form">
  <%= form_for @well, remote: true do |f| %>

      <%= render "fields", f: f %>

      <div class="content actions">
        <%= f.submit "Create Well", class: "bluebtn pull-right form-loading-on-click" %>
      </div>

  <% end %>
</div>

<%= render 'layouts/inline_loading', title: "Please wait, creating well..." %>

<script type="text/javascript">
    (function ($) {
        $(document).ready(function () {
            $('.unitsSelect').customSelect();
        });
    }(jQuery));
</script>
