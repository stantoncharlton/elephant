$('#job_well_id').removeClass("ajax-loading");
$('#job_well_id').find('option').remove();

$('<option>').val('-1').text('Select a Well...').appendTo('#job_well_id');

<% @wells.each do |w| %>
    $('<option>').val('<%= w.id %>').text('<%= w.name %>').appendTo('#job_well_id');
<% end %>

<% if @wells.count == 0 %>
    $('#job_well_id').attr("disabled", "disabled");
    $('#job_well_id').css("opacity", ".3");
<% else %>
    $('#job_well_id').removeAttr("disabled");
    $('#job_well_id').css("opacity", "1");
<% end %>
