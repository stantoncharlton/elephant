<div class="user-line">
  <%= render 'users/user_icon', user: user, use_link: false, use_name: false %>
  <h3><%= user.name %></h3>

  <div class="user-line-title"><%= user.title %></div>

  <div class="user-line-district"><%= user.district.present? ? user.district.name : "" %></div>

  <div class="user-line-email"><%= user.email %></div>
</div>