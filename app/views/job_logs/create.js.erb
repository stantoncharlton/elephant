<% if @job_log.new_record? %>

$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Failed to add entry", message: @job_log.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show:true});

<% else %>

$('.no-job-log-entries').remove();

$("#list").append("<%= j render 'job_logs/job_log', entry: @job_log %>");
$('#new_job_log_id').val('');

$('.activity-user-link').tooltip();
$('.tooltip-info').tooltip();

$('.form[data-form=new-job-log]').show();
$('.form-loading[data-form=new-job-log]').addClass('hidden');

<% end %>
