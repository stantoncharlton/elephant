<div class="page_header">
  <h1>New Asset</h1>
  <h3>Warehouse - <%= @warehouse.name %></h3>
</div>


<div class="form" data-form="new_part">
  <%= form_for(@part) do |f| %>
      <%= render 'fields', f: f %>

      <%= f.submit "Create New Asset",
                   class: "bluebtn pull-right tooltip-info  form-loading-on-click",
                   "data-form" => "new_part",
                   "data-title" => "Create and save new asset" %>

      <%= link_to "Cancel", :back, class: "bluebtn pull-right btnheight gray push-left-small tooltip-info",
                  "data-title" => "Cancel new asset and go back" %>
  <% end %>
</div>

<div class="form-loading hidden" data-form="new_part">
  <%= render "layouts/inline_loading", title: "Creating asset, please wait..." %>
</div>