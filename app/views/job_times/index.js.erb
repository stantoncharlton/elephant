<% if @user.present? %>
$('#calendar').replaceWith("<%= j render 'users/calendar_view' %>");
<% elsif @job.present? %>
$('#job_time').replaceWith("<%= j render 'job_times/job_time', job: @job %>");

function recount() {
var total_scheduled, total_worked,
        _this = this;
total_scheduled = 0;
total_worked = 0;
$('.user-timesheet').each(function(root_index, timesheet) {
    var user_scheduled, user_worked;
    user_scheduled = parseFloat($(timesheet).find('.user-total-time-scheduled').attr('data-hours'));
    user_worked = parseFloat($(timesheet).find('.user-total-time').attr('data-hours'));
    total_scheduled += user_scheduled;
    return total_worked += user_worked;
});
$('.total-scheduled').text(total_scheduled);
$('.total-worked').text(total_worked);
}


recount();


<% end %>

if (!window.matchMedia || !window.matchMedia("(max-device-width: 1024px)").matches) {
$('.tooltip-info').tooltip();
}

