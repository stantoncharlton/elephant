<% if @comment.new_record? %>

$('#alert').remove();
$('body').append("<%= j render 'layouts/modal_error', title: "Problem Adding Comment", message: @comment.errors.full_messages.join(', ').html_safe %>");
$('#alert').modal({show:true});

<% else %>
$("#job_note_comments_<%= @job_note.id %>").append("<%= j render 'job_note_comments/comment', comment: @comment %>");
$('#job_note_comment_text_<%= @job_note.id %>').val('');
<% end %>


